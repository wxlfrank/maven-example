  <eposap:WebService>
    <dct:title>ShakeMap Input XML - Engineering Strong-Motion database (ESM)</dct:title>
    <dct:description>Resources can be used as input files for USGS ShakeMap program to create event shakemaps.</dct:description>
    <!-- DEPRECATED?: <dcat:accessURL>http://geofon.gfz-potsdam.de/fdsnws/dataselect/1/query</dcat:accessURL> -->
    <dct:issued>2017-04-01T00:00:00</dct:issued>
    <dct:modified>2017-04-01T00:00:00</dct:modified>
    <dct:license>To be defined!</dct:license>
    <foaf:page>
      <foaf:primaryTopic>http://esm.mi.ingv.it/esmws/shakemap/1/query?</foaf:primaryTopic>
    </foaf:page>
    <dct:format>
      <dct:MediaTypeOrExtent>
       <!-- ShakeMapXML --> xml
      </dct:MediaTypeOrExtent>
    </dct:format>
    <dct:rights>
      <dct:RightsStatement>
        To be defined by EPOS!
      </dct:RightsStatement>
    </dct:rights>
    <dct:conformsTo>EPSG:4326</dct:conformsTo>
    <!-- If this is the proper way to define the identifier is still under
    discussion. TODO No special character are accepted here. -->
    <dct:identifier>esm.mi.ingv.it/esmws/shakemap/1/query</dct:identifier>
    <dct:created>2017-04-01T00:00:00</dct:created>
    <!-- This property refers to the domain of resource (e.g. Seismology, GNSS etc.) -->
    <eposap:domain>
      Seismology
    </eposap:domain>
    <!-- TODO TCSs will have to provide a list of subdomain terms. -->
    <eposap:subDomain>
      Seismic Hazard products
    </eposap:subDomain>
    <dcat:keyword>Seismic Hazard, INGV,ESM,Event,ShakeMap,ShakeMapXML,Strong Motion</dcat:keyword>
    <!-- TODO A list of terms has to be agreed with EPOS. -->
    <eposap:operation>
      execute
    </eposap:operation>
    <dct:hasVersion>0.1</dct:hasVersion>
    <eposap:parameter>
      <http:paramName>eventid</http:paramName>
      <rdf:label>Event ID</rdf:label>
      <dct:type>
              string
      </dct:type>
    </eposap:parameter>

    <eposap:parameter>
      <http:paramName>catalog</http:paramName>
      <rdf:label>Catalog for the 'Event ID'</rdf:label>
      <dct:type>
              string
      </dct:type>
      <http:paramValue>ESM</http:paramValue>
      <http:paramValue>ISC</http:paramValue>
      <http:paramValue>USGS</http:paramValue>
      <http:paramValue>EMSC</http:paramValue>
      <http:paramValue>INGV</http:paramValue>
    </eposap:parameter>

    <eposap:parameter>
      <http:paramName>format</http:paramName>
      <rdf:label>ShakeMapXML format</rdf:label>
      <dct:type>
              string
      </dct:type>
      <http:paramValue>event</http:paramValue>
      <http:paramValue>event_dat</http:paramValue>
      <http:paramValue>event_fault</http:paramValue>
    </eposap:parameter>
    
    <!-- FIXME A ':' character should be accepted to separate the schema from the ID. -->
